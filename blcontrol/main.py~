#! /usr/bin/env python

import ConfigParser
import os
from blcontrol.gui.gui import BeamlineGUI

def load_conf_file(conf_path='/home/bladmin/blcontrol/config/blconf.txt'):
    xconfpath = os.path.expanduser(conf_path)
    config = ConfigParser.SafeConfigParser()
    with open(xconfpath, 'r') as configfile:
        config.readfp(configfile)
    return config

if __name__ == '__main__':
    config = load_conf_file()
    gui = BeamlineGUI(config)
    gui.mainloop()
